<div class="post">
        <h3><%=post.title%></h3>
        <p><%=post.text%></p>
        <div class="spam">
            <p>Comments:  <%=post.comments_counter%></p>
            <p>Likes:  <%=post.likes_counter%></p>
        </div>
    </div>
    <div class="comments">
        <%post.comments.each do |comment|%>
        <p><strong><%=comment.text%></strong></p>
        <% end %>
    </div>
